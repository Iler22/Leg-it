<article class='card' id='{{id}}'>
  <div class='is-flex'>
    <a href='/posts/{{id}}'>
      <div class='level-left'>
        <h2 class='card-header-title username level-left' user-id='{{user.id}}'>
          {{user.username}}
        </h2>
      </div>
    </a>
    <div class='level-right'>
      <h2 class='card-header-title level-right'>
        <div class='modal-trigger'>
          <span class='icon is-small'>
            <i class='fas fa-ellipsis-h' aria-hidden='true'></i>
          </span>

        </div>
      </h2>
    </div>
  </div>
  <div class='card-image'>
    <figure class='image is-1by1'>
      <img src={{post_image}} alt='{{post_title}}' />
    </figure>
  </div>
  <div class='level is-mobile' style='marginBottom: 0'>
    <div class='level-left'>
      <span
        class='card-header-title level-item'
        role='img'
        aria-label='heart emoji'
      >
        {{#if like}}
          <strong id='like-post' post-id={{id}} class='like-post'><i
              class='fas fa-heart'
            ></i><span class='likes-counter' data-value={{likes.length}}>
              {{likes.length}}
              likes</span></strong>
        {{else}}
          <strong id='like-post' post-id={{id}} class='like-post'><i
              class='far fa-heart'
            ></i><span class='likes-counter' data-value={{likes.length}}>
              {{likes.length}}
              likes</span></strong>
        {{/if}}
      </span>
    </div>
  </div>
</article>