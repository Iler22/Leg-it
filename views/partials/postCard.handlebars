<a href='/' class='fig column is-4'>

  <img src={{post_image}} alt='{{post_title}}' />
  <div class='caption'>
    {{#if likes}}
      <h3> <i class='fa fa-heart'></i><span> {{likes.length}}</span></h3>
    {{/if}}
    {{! </h3>
      <h3> }}
    {{#if comments}}
      <h3> <i class='fa fa-comment'></i><span> {{comments.length}}</span></h3>
    {{/if}}
    {{! <h5>Sign-up or login to view content!</h5> }}
  </div>
</a>